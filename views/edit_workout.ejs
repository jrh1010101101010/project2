<h1 class="title">edit workout</h1>



<main class = 'edit-ui'>
    
    <h2> <%= workout.title %></h2>

    <div class = "edit-form">
    
    <form action="/workout/<%= workout.id %>" method="post">
        <input type= "hidden" name="_method" value ="put">

        <label for="">title</label>
        <input type="text" name="title" value="<%= workout.title %>" class="input">

        <label for="">description</label>
        <input type="text" name="description" value="<%= workout.description %>">

        <label for="">set</label>
        <input type="text" name="set", value="<%= workout.set %>">

        <button>update</button>
    </form>
    </div>
</main>



